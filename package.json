{
  "private": true,
  "devDependencies": {
    "prettier": "^1.13.5"
  },
  "scripts": {
    "format": "prettier --write \"{*.js,package.json}\""
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "{amazon-read-more.js,lazy-image-loader.js,sfgate-hearst-gallery-expander.js}",
